# Database Configuration (if using SQLite instead of memory storage)
DATABASE_URL=sqlite:./classstore.db

# Server Configuration
NODE_ENV=development
PORT=5000
SESSION_SECRET=your-super-secret-session-key-change-in-production

# Site Configuration
SITE_URL=http://localhost:5000
ADMIN_URL_PART=secure-admin-dashboard-xyz123

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=ClassStore <noreply@classstore.com>
ADMIN_EMAIL=admin@classstore.com

# reCAPTCHA Configuration
RECAPTCHA_SECRET=your-recaptcha-secret-key

# Frontend Environment Variables (for client/.env.local)
# REACT_APP_API_URL=http://localhost:5000
# REACT_APP_RECAPTCHA_KEY=your-recaptcha-site-key

# Production Email Services (recommended alternatives)
# SENDGRID_API_KEY=your-sendgrid-api-key
# POSTMARK_API_KEY=your-postmark-api-key
